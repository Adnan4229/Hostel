<odoo>
    <record id="view_hostel_report_wizard_form" model="ir.ui.view">
        <field name="name">hostel.report.wizard.form</field>
        <field name="model">hostel.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Hostel Report Wizard">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Print XLSX" type="object" name="print_xlsx_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_hostel_report_wizard" model="ir.actions.act_window">
        <field name="name">Hostel Report Wizard</field>
        <field name="res_model">hostel.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hostel_report_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
