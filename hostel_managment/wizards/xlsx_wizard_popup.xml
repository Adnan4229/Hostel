<odoo>
    <data>
        <record id="hostel_report_wizard_form" model="ir.ui.view">
            <field name="name">hostel.report.wizard.form</field>
            <field name="model">hostel.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Generate XLSX" name="print_report" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hostel_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Hostel XLSX Report</field>
            <field name="res_model">hostel.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>