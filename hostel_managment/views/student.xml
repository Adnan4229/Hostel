<odoo>
    <data>

        <record id="student_form_view" model="ir.ui.view">
            <field name="name">student.view.form</field>
            <field name="model">student.hostel</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="roll_no"/>
                            <field name="dob"/>
                            <field name="email"/>
                            <field name="hostel_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="student_tree_view" model="ir.ui.view">
            <field name="name">student.view.tree</field>
            <field name="model">student.hostel</field>
            <field name="arch" type="xml">
                <tree>

                    <field name="name"/>
                    <field name="roll_no"/>
                    <field name="dob"/>
                    <field name="email"/>
                    <field name="hostel_id"/>

                </tree>
            </field>
        </record>


          <record id="action_student" model="ir.actions.act_window">
            <field name="name">student</field>
            <field name="res_model">student.hostel</field>
            <field name="view_mode">tree,form</field>
        </record>
<menuitem id="student_menu"
          name="Student"
           parent="menu_hostel_root"
           action="action_student"
          sequence="20"/>

    </data>
</odoo>