<odoo>
    <data>
        <record id="view_hostel_amenities_list" model="ir.ui.view">
            <field name="name">hostel.amenities.tree</field>
            <field name="model">hostel.amenities</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>


        <record id="view_hostel_amenities_form" model="ir.ui.view">
            <field name="name">hostel.amenities.form</field>
            <field name="model">hostel.amenities</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hostel_amenities" model="ir.actions.act_window">
            <field name="name">Hostel Amenities</field>
            <field name="res_model">hostel.amenities</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hostel_amenities_menu"
                  name="Amenities"
                  parent="menu_hostel_root"
                  action="action_hostel_amenities"
                  sequence="12"/>

    </data>
</odoo>
