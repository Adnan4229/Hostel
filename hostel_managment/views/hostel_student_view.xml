<odoo>
    <data>
        <record id="view_hostel_student_tree" model="ir.ui.view">
            <field name="name">hostel.student.tree</field>
            <field name="model">hostel.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="active"/>
                    <field name="room_id"/>
                    <field name="hostel_id"/>
                </tree>
            </field>
        </record>


        <record id="view_hostel_student_form" model="ir.ui.view">
            <field name="name">hostel.student.form</field>
            <field name="model">hostel.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="active"/>
                            <field name="room_id"/>
                            <field name="hostel_id"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hostel_student" model="ir.actions.act_window">
            <field name="name">Hostel student</field>
            <field name="res_model">hostel.student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hostel_student_menu"
                  name="Students"
                  parent="menu_hostel_root"
                  action="action_hostel_student"
                  sequence="12"/>

    </data>
</odoo>
