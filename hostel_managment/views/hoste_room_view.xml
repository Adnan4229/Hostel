<odoo>
    <data>
        <record id="view_hostel_room_list" model="ir.ui.view">
            <field name="name">hostel.room.list</field>
            <field name="model">hostel.room</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="hostel_id"/>
                    <field name="currency_id"/>
                    <field name="rent_amount"/>
                    <field name="room_no"/>
                    <field name="student_per_room"/>
                    <field name="availability"/>
                    <field name="admission_date"/>
                    <field name="discharge_date"/>
                    <field name="duration"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="view_hostel_room_form" model="ir.ui.view">
            <field name="name">hostel.room.form</field>
            <field name="model">hostel.room</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="hostel_id"/>
                            <field name="currency_id"/>
                            <field name="rent_amount"/>
                            <field name="room_no"/>
                            <field name="student_per_room"/>
                            <field name="availability"/>
                            <field name="admission_date"/>
                            <field name="discharge_date"/>
                            <field name="duration"/>
                            <field name="state"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hostel_room" model="ir.actions.act_window">
            <field name="name">Hostel Room</field>
            <field name="res_model">hostel.room</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hostel_room_menu"
                  name="Room"
                  parent="menu_hostel_root"
                  action="action_hostel_room"
                  sequence="11"/>

    </data>
</odoo>
